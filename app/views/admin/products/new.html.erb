<br />
<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 card form">
<h1>Add a new item</h1>
<%= simple_form_for @products, url: admin_products_path  do |f| %>
	<%= f.input :title %>
	<br />	
	<%= f.input :description %>
	<br />
	<%= f.input :price %>
	<br />	
	<%= f.input :photo %>
	<br />
	<%= f.input :brand %>
	<br />
	<%= f.input :gender, as: :select, collection: Product::Genders %>
	<br />
	<%= f.input :condition, as: :select, collection: Product::Conditions %>
	<br />
	<div class='form_label'><%= 'Category' %></div><br />
	<%= text_field_tag "new_category" %>&nbsp;
	<%= f.collection_select :category_id, Category.all, :id , :kind %><br />
	<br /><div class='form_label'><%= 'Size' %></div> <br />
	<%= text_field_tag "new_size" %>&nbsp;
	<%= f.collection_select :size_id, Size.all, :id , :name %><br />
	<%= f.input :sale %>
 <%= f.submit 'Add!', class: 'my-btn' %>
	<% end %>
	</div>

