<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 card form">
<h1>New</h1>
<%= simple_form_for @products, url: admin_products_path  do |f| %>
	<%= f.input :title %>
	<br />	
	<%= f.input :description %>
	<br />
	<%= f.input :price %>
	<br />
	<%= f.input :kind %>
	<br />	
	<%= f.input :brand %>
	<br />

	<%= f.input :size, as: :select, collection: Product::Sizes %>
	<%= f.submit 'Add!', class: 'my-btn' %>
	<% end %>
	</div>

